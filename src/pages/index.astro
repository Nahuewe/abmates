---
import Footer from "../layouts/Footer.astro";
import Header from "../layouts/Header.astro";
import MainLayout from "../layouts/MainLayout.astro";

const WHATSAPP_NUMBER = "5493834053417";
const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
const SUPABASE_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<MainLayout title="AB Mates | Catalogo">
  <Header />

  <!-- HERO -->
  <section
    class="px-4 pt-20 pb-16 text-center relative overflow-hidden bg-linear-to-b from-[#F3E7DF] via-[#F9F1EB] to-white"
  >
    <div class="absolute inset-0 opacity-40">
      <div
        class="absolute top-20 left-1/4 w-96 h-96 bg-[#C46A3A]/40 rounded-full mix-blend-multiply filter blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-1/4 w-96 h-96 bg-[#8B3E1E]/30 rounded-full mix-blend-multiply filter blur-3xl"
      >
      </div>
    </div>

    <div class="relative">
      <span
        class="inline-block mb-6 text-xs font-bold uppercase tracking-[0.3em] text-[#8B3E1E] bg-[#F3E7DF] px-5 py-2 rounded-full border border-[#C46A3A]/30"
      >
        Cat√°logo artesanal
      </span>

      <h2
        class="text-5xl sm:text-7xl font-black mb-6 leading-[1.1] tracking-tight"
      >
        Viv√≠ el ritual<br />
        <span
          class="bg-linear-to-r from-[#8B3E1E] via-[#A24B28] to-[#C46A3A] bg-clip-text text-transparent"
          >del mate</span
        >
      </h2>

      <p
        class="text-[#4A1F0E]/80 text-lg max-w-2xl mx-auto leading-relaxed font-medium"
      >
        Productos seleccionados para acompa√±arte todos los d√≠as.<br />
        <span class="text-[#8B3E1E]"
          >Dise√±o, calidad y tradici√≥n argentina.</span
        >
      </p>
    </div>
  </section>

  <!-- FILTROS -->
  <section class="px-4 -mt-8 relative z-10">
    <div
      class="max-w-4xl mx-auto bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl p-6 grid gap-4 sm:grid-cols-2 border border-white/40"
    >
      <div class="relative">
        <svg
          class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[#8B3E1E]/50"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input
          id="searchInput"
          placeholder="Buscar producto‚Ä¶"
          class="w-full pl-12 pr-5 py-4 rounded-2xl border-2 border-[#F3E7DF] text-sm
         bg-[#F9F1EB] focus:bg-white font-medium
         focus:outline-none focus:ring-4 focus:ring-[#C46A3A]/20 focus:border-[#8B3E1E] transition-all"
        />
      </div>

      <select
        id="categoryFilter"
        class="px-5 py-4 rounded-2xl border-2 border-[#F3E7DF] text-sm font-medium
               bg-[#F9F1EB] focus:bg-white
               focus:outline-none focus:ring-4 focus:ring-[#C46A3A]/20 focus:border-[#8B3E1E] transition-all"
      >
        <option value="all">Todas las categor√≠as</option>
        <option value="mate">Mates</option>
        <option value="termo">Termos</option>
        <option value="bombilla">Bombillas</option>
        <option value="vaso">Vasos</option>
      </select>
    </div>
  </section>

  <!-- PRODUCTOS -->
  <main class="px-4 py-12">
    <div
      id="products"
      class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-7xl mx-auto"
    >
    </div>
  </main>

  <!-- Configuraci√≥n para el script -->
  <script
    is:inline
    define:vars={{ WHATSAPP_NUMBER, SUPABASE_URL, SUPABASE_KEY }}
  >
    window.APP_CONFIG = {
      WHATSAPP_NUMBER,
      SUPABASE_URL,
      SUPABASE_KEY,
    };
  </script>

  <script type="module">
    import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm";

    const { WHATSAPP_NUMBER, SUPABASE_URL, SUPABASE_KEY } = window.APP_CONFIG;
    const supabase = createClient(SUPABASE_URL, SUPABASE_KEY);

    let products = [];

    const container = document.getElementById("products");
    const search = document.getElementById("searchInput");
    const filter = document.getElementById("categoryFilter");

    async function loadProducts() {
      const { data, error } = await supabase
        .from("products")
        .select("*")
        .order("created_at", { ascending: false });

      if (error) {
        console.error("Error cargando productos:", error);
        return;
      }

      products = data;
      render(products);
    }

    function whatsappLink(name) {
      const text = `Hola. Me interesa el producto "${name}". ¬øPodr√≠as darme m√°s informaci√≥n, por favor?`;
      return `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(text)}`;
    }

    function render(list) {
      container.innerHTML = "";

      list.forEach((p) => {
        const card = document.createElement("div");
        card.className =
          "group bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden hover:-translate-y-2 border border-[#F3E7DF]";

        card.innerHTML = `
        <div class="relative aspect-[4/5] overflow-hidden bg-gradient-to-br from-[#F9F1EB] to-[#F3E7DF]">
          <img
            src="${p.image}"
            alt="${p.name}"
            class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-110 group-hover:rotate-1"
          />
          <span class="absolute top-5 left-5 text-[10px] font-bold uppercase tracking-[0.2em]
            bg-gradient-to-r from-[#8B3E1E] to-[#C46A3A] text-white px-4 py-2 rounded-full shadow-lg">
            ${p.category}
          </span>

          ${
            p.status === "new"
              ? `<span class="absolute top-5 right-5 text-[10px] font-bold bg-[#C46A3A] text-white px-3 py-1 rounded-full shadow-lg animate-pulse">NUEVO</span>`
              : ""
          }

          ${
            p.status === "limited"
              ? `<span class="absolute top-5 right-5 text-[10px] font-bold bg-[#8B3E1E] text-white px-3 py-1 rounded-full shadow-lg">¬°√öLTIMOS!</span>`
              : ""
          }
        </div>

        <div class="p-6">
          <h4 class="text-xl font-black tracking-tight text-[#4A1F0E]">${p.name}</h4>
          <p class="text-[#8B3E1E] font-black text-2xl mt-3">${
            p.price != null
              ? `<p class="text-[#8B3E1E] font-black text-2xl mt-3">$${p.price}</p>`
              : ""
          }

          <div class="mt-6">
            <a
              href="${whatsappLink(p.name)}"
              target="_blank"
              class="block text-center bg-gradient-to-r from-[#8B3E1E] to-[#C46A3A]
                     text-white py-4 rounded-2xl text-sm font-black uppercase tracking-wide
                     shadow-lg shadow-[#8B3E1E]/30"
            >
              üí¨ Consultar por WhatsApp
            </a>
          </div>
        </div>
      `;

        container.appendChild(card);
      });
    }

    function applyFilters() {
      const s = search.value.toLowerCase();
      const c = filter.value;

      render(
        products.filter(
          (p) =>
            p.name.toLowerCase().includes(s) &&
            (c === "all" || p.category === c),
        ),
      );
    }

    search.addEventListener("input", applyFilters);
    filter.addEventListener("change", applyFilters);

    loadProducts();
  </script>

  <Footer />
</MainLayout>
