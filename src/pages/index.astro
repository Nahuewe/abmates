---
import Footer from "../layouts/Footer.astro";
import Header from "../layouts/Header.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { supabase } from "../lib/supabase";

const WHATSAPP_NUMBER = "5493834053417";

const { data: productsData, error } = await supabase
  .from("products")
  .select("*")
  .order("created_at", { ascending: false });

const initialProducts = productsData || [];
---

<MainLayout title="AB Mates | Cat√°logo">
  <Header />

  <section
    class="bg-[#4A1F0E] text-white/80 text-xs font-semibold tracking-wide"
  >
    <div
      class="max-w-7xl mx-auto px-4 py-2 flex flex-wrap gap-x-6 gap-y-2 justify-center"
    >
      <span class="flex items-center gap-2"
        >üí≥ Transferencia y Mercado Pago</span
      >
      <span class="flex items-center gap-2">‚≠ê Productos artesanales</span>
      <span class="flex items-center gap-2">üì¶ Stock inmediato</span>
    </div>
  </section>

  <!-- HERO -->
  <section
    class="relative overflow-hidden px-4 pt-24 pb-20 text-center bg-linear-to-b from-[#F3E7DF] via-[#F9F1EB] to-white"
  >
    <div class="absolute inset-0 opacity-40 pointer-events-none">
      <div
        class="absolute top-20 left-1/4 w-md h-112 bg-[#C46A3A]/40 rounded-full mix-blend-multiply filter blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-1/4 w-md h-112 bg-[#8B3E1E]/30 rounded-full mix-blend-multiply filter blur-3xl"
      >
      </div>
    </div>
    <div class="relative max-w-3xl mx-auto">
      <span
        class="inline-flex items-center gap-2 mb-6 text-[11px] font-black uppercase tracking-[0.3em] text-[#8B3E1E] bg-white/70 px-6 py-2 rounded-full border border-[#C46A3A]/30 shadow"
      >
        Cat√°logo artesanal argentino
      </span>
      <h2
        class="text-5xl sm:text-7xl font-black mb-6 leading-[1.05] tracking-tight"
      >
        Viv√≠ el ritual<br />
        <span
          class="bg-linear-to-r from-[#8B3E1E] via-[#A24B28] to-[#C46A3A] bg-clip-text text-transparent"
        >
          del mate
        </span>
      </h2>
      <p
        class="text-[#4A1F0E]/80 text-lg max-w-2xl mx-auto leading-relaxed font-medium"
      >
        Productos seleccionados para acompa√±arte todos los d√≠as.<br />
        <span class="text-[#8B3E1E] font-semibold"
          >Dise√±o, calidad y tradici√≥n argentina.</span
        >
      </p>
      <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`https://wa.me/${WHATSAPP_NUMBER}`}
          target="_blank"
          class="inline-flex items-center justify-center gap-2 px-10 py-4 rounded-2xl bg-linear-to-r from-[#8B3E1E] to-[#C46A3A] text-white text-sm font-black uppercase tracking-wide shadow-xl shadow-[#8B3E1E]/30 hover:scale-[1.03] transition"
        >
          üí¨ Consultar por WhatsApp
        </a>
        <a
          href="#productos"
          class="inline-flex items-center justify-center gap-2 px-10 py-4 rounded-2xl bg-white text-[#8B3E1E] border-2 border-[#C46A3A]/40 text-sm font-black uppercase tracking-wide shadow hover:bg-[#F9F1EB] transition"
        >
          Ver cat√°logo
        </a>
      </div>
    </div>
  </section>

  <!-- FILTROS -->
  <section id="productos" class="px-4 -mt-10 relative z-10">
    <div
      class="max-w-5xl mx-auto bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl p-6 grid gap-4 sm:grid-cols-[1fr_auto_auto] items-center border border-white/40"
    >
      <!-- SEARCH -->
      <div class="relative">
        <svg
          class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[#8B3E1E]/50"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input
          id="searchInput"
          placeholder="Buscar producto‚Ä¶"
          class="w-full pl-12 pr-5 py-4 rounded-2xl border-2 border-[#F3E7DF] text-sm bg-[#F9F1EB] focus:bg-white font-medium focus:outline-none focus:ring-4 focus:ring-[#C46A3A]/20 focus:border-[#8B3E1E] transition-all"
        />
      </div>
      <!-- CATEGORY -->
      <select
        id="categoryFilter"
        class="px-5 py-4 rounded-2xl border-2 border-[#F3E7DF] text-sm font-medium bg-[#F9F1EB] focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#C46A3A]/20 focus:border-[#8B3E1E] transition-all"
      >
        <option value="all">Todas las categor√≠as</option>
        <option value="mate">Mates</option>
        <option value="termo">Termos</option>
        <option value="bombilla">Bombillas</option>
        <option value="vaso">Vasos</option>
      </select>
      <!-- COUNTER -->
      <div
        id="resultCount"
        class="hidden sm:flex items-center justify-center px-5 py-4 rounded-2xl bg-[#F3E7DF]/60 border border-[#C46A3A]/30 text-xs font-black uppercase tracking-wider text-[#8B3E1E]"
      >
        {initialProducts.length} producto{
          initialProducts.length === 1 ? "" : "s"
        }
      </div>
    </div>
    <!-- ACTIVE FILTERS -->
    <div
      id="activeFilters"
      class="max-w-5xl mx-auto mt-4 flex flex-wrap gap-3 text-xs font-bold"
    >
    </div>
  </section>

  <!-- PRODUCTOS -->
  <main class="px-4 py-14">
    <div
      id="products"
      class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3 max-w-7xl mx-auto"
    >
      <!-- Los productos se renderizan aqu√≠ -->
    </div>
    <!-- EMPTY STATE -->
    <div id="emptyState" class="hidden max-w-xl mx-auto text-center py-20">
      <div
        class="w-24 h-24 mx-auto mb-6 rounded-full bg-[#F3E7DF] flex items-center justify-center text-4xl"
      >
        üîç
      </div>
      <h3 class="text-2xl font-black text-[#4A1F0E] mb-2">
        No encontramos productos
      </h3>
      <p class="text-[#8B3E1E]/70 text-sm">
        Prob√° cambiar la b√∫squeda o los filtros.
      </p>
    </div>
  </main>

  <script define:vars={{ WHATSAPP_NUMBER, initialProducts }}>
    let products = initialProducts;
    const container = document.getElementById("products");
    const emptyState = document.getElementById("emptyState");
    const search = document.getElementById("searchInput");
    const filter = document.getElementById("categoryFilter");
    const resultCount = document.getElementById("resultCount");
    const activeFilters = document.getElementById("activeFilters");

    function whatsappLink(name) {
      const text = `Hola. Me interesa el producto "${name}". ¬øPodr√≠as darme m√°s informaci√≥n, por favor?`;
      return `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(text)}`;
    }

    function render(list) {
      container.innerHTML = "";
      emptyState.classList.toggle("hidden", list.length > 0);
      resultCount.textContent = `${list.length} producto${list.length === 1 ? "" : "s"}`;
      resultCount.classList.remove("hidden");

      list.forEach((p) => {
        const isOut = p.status === "out_of_stock";
        const card = document.createElement("div");

        card.className = `group relative bg-white rounded-3xl shadow-xl transition-all duration-300 overflow-hidden border border-[#F3E7DF] ${
          isOut
            ? "opacity-70 grayscale cursor-not-allowed"
            : "hover:shadow-2xl hover:-translate-y-2"
        }`;

        card.innerHTML = `
          <div class="flex flex-col h-full">
            <div class="relative aspect-[4/5] overflow-hidden bg-linear-to-br from-[#F9F1EB] to-[#F3E7DF]">
              <img
                src="${p.image}"
                alt="${p.name}"
                loading="lazy"
                class="absolute inset-0 w-full h-full object-cover transition duration-700 ${
                  isOut ? "" : "group-hover:scale-105 group-hover:rotate-1"
                }"
              />
              <span class="absolute top-5 left-5 text-[10px] font-black uppercase tracking-[0.2em] bg-linear-to-r from-[#8B3E1E] to-[#C46A3A] text-white px-4 py-2 rounded-full shadow-lg">
                ${p.category}
              </span>
              ${
                p.status === "new"
                  ? `<span class="absolute top-5 right-5 text-[10px] font-black bg-[#C46A3A] text-white px-3 py-1 rounded-full shadow-lg animate-pulse">NUEVO</span>`
                  : ""
              }
              ${
                p.status === "limited"
                  ? `<span class="absolute top-5 right-5 text-[10px] font-black bg-[#8B3E1E] text-white px-3 py-1 rounded-full shadow-lg">¬°√öLTIMOS!</span>`
                  : ""
              }
              ${
                p.status === "out_of_stock"
                  ? `<span class="absolute top-5 right-5 text-[10px] font-black bg-red-600 text-white px-3 py-1 rounded-full shadow-lg">SIN STOCK</span>`
                  : ""
              }
              ${
                p.discount
                  ? `<span class="absolute bottom-5 left-5 text-[10px] font-black bg-red-500 text-white px-3 py-1 rounded-full shadow-lg">-${p.discount}%</span>`
                  : ""
              }
              ${
                isOut
                  ? `<div class="absolute inset-0 bg-black/50 flex items-center justify-center">
                      <span class="px-5 py-3 rounded-xl bg-white/90 text-red-600 text-xs font-black uppercase tracking-wide shadow">
                        No disponible
                      </span>
                    </div>`
                  : ""
              }
            </div>

            <div class="flex flex-col flex-1 p-5">
              <h4 class="text-lg font-black tracking-tight text-[#4A1F0E] line-clamp-2 min-h-[2.5rem]">
                ${p.name}
              </h4>
              <p class="mt-2 text-[#8B3E1E] font-black text-xl min-h-[1.75rem]">
                ${p.price != null ? `$${p.price}` : "Consultar precio"}
              </p>
              <p class="mt-1 text-[11px] font-black uppercase tracking-wide min-h-[1rem] ${
                isOut ? "text-red-600" : "text-[#8B3E1E]"
              }">
                ${
                  isOut
                    ? "Producto agotado"
                    : p.stock && p.stock <= 3
                      ? `Quedan ${p.stock} unidades`
                      : ""
                }
              </p>

              <div class="mt-auto pt-3">
                ${
                  isOut
                    ? `<button disabled class="block w-full text-center bg-gray-300 text-gray-600 py-3 rounded-xl text-xs font-black uppercase tracking-wide cursor-not-allowed">
                        Sin stock
                      </button>`
                    : `<a href="${whatsappLink(p.name)}" target="_blank" class="block text-center bg-linear-to-r from-[#8B3E1E] to-[#C46A3A] text-white py-3 rounded-xl text-xs font-black uppercase tracking-wide shadow-lg shadow-[#8B3E1E]/30 hover:scale-[1.02] transition">
                        üí¨ Consultar por WhatsApp
                      </a>`
                }
              </div>
            </div>
          </div>
        `;

        container.appendChild(card);
      });
    }

    function renderActiveFilters() {
      activeFilters.innerHTML = "";

      if (search.value) {
        const chip = document.createElement("button");
        chip.className =
          "px-4 py-2 rounded-full bg-[#F3E7DF] border border-[#C46A3A]/30 text-[#8B3E1E] flex items-center gap-2 hover:bg-[#F9F1EB] transition";
        chip.innerHTML = `üîé "${search.value}" ‚úï`;
        chip.onclick = () => {
          search.value = "";
          applyFilters();
        };
        activeFilters.appendChild(chip);
      }

      if (filter.value !== "all") {
        const chip = document.createElement("button");
        chip.className =
          "px-4 py-2 rounded-full bg-[#F3E7DF] border border-[#C46A3A]/30 text-[#8B3E1E] flex items-center gap-2 hover:bg-[#F9F1EB] transition";
        chip.innerHTML = `üìÇ ${filter.options[filter.selectedIndex].text} ‚úï`;
        chip.onclick = () => {
          filter.value = "all";
          applyFilters();
        };
        activeFilters.appendChild(chip);
      }
    }

    function applyFilters() {
      const s = search.value.toLowerCase();
      const c = filter.value;
      const filtered = products.filter(
        (p) =>
          p.name.toLowerCase().includes(s) && (c === "all" || p.category === c),
      );
      render(filtered);
      renderActiveFilters();
    }

    search.addEventListener("input", applyFilters);
    filter.addEventListener("change", applyFilters);

    // Renderizar productos iniciales
    render(products);
  </script>

  <Footer />
</MainLayout>
